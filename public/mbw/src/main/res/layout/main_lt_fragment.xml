<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llLocalTrader"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="@dimen/activity_vertical_margin">

    <ImageView
            android:id="@+id/ivMyceliumLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@drawable/mycelium_logo_transparent_100px"
            android:contentDescription="@string/lt_mycelium_marketplace"
            android:layout_marginRight="@dimen/activity_vertical_margin"/>

    <LinearLayout
            android:id="@+id/llMyceliumBuySell"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvMyceliumName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="@string/lt_mycelium_marketplace"
                    android:textSize="18sp">
            </TextView>

            <ImageView
                    android:id="@+id/ivDot"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:contentDescription="@string/lt_new_trading_activity_message"
                    android:src="@drawable/circle_full_green">
            </ImageView>
        </LinearLayout>

        <TextView
                android:id="@+id/tvMyceliumDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:gravity="center"
                android:text="@string/lt_mycelium_marketplace_description"
                android:textSize="12sp">
        </TextView>
    </LinearLayout>
</LinearLayout>