<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <!-- Key Icon -->

    <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginLeft="5dp">

        <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/label_single_key_icon"
                tools:src="@drawable/singlekey_grey" >
        </ImageView>
    </FrameLayout>

    <LinearLayout
            android:id="@+id/llAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="0dp" >

        <TextView
                android:id="@+id/tvLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:textSize="24sp" >
        </TextView>

        <TextView
                android:id="@+id/tvAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:textSize="16sp"
                android:typeface="monospace" >
        </TextView>

        <TextView
                android:id="@+id/tvBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:textSize="16sp" >
        </TextView>

        <TextView
                android:id="@+id/tvLegacyAccountWarning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/legacy_account_with_funds"
                android:textColor="@color/red"
                android:textSize="16sp" >
        </TextView>

        <TextView
                android:id="@+id/tvBackupMissingWarning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/backup_missing"
                android:textColor="@color/red"
                android:textSize="16sp" >
        </TextView>

        <TextView
                android:id="@+id/tvTraderKey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/lt_trader_key"
                android:textColor="@color/green"
                android:visibility="gone"
                android:textSize="12sp" >
        </TextView>
    </LinearLayout>

</LinearLayout>